---
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "../i18n/utils.ts";
import { languagesList } from "../i18n/ui.ts";
const currentLocale = Astro.currentLocale || "en";
const t = useTranslations(currentLocale as keyof typeof languagesList);
import data from "@data/data.json";
const userData = data[currentLocale];

import BaseLayout from "./BaseLayout.astro";
const {
    pageTitle = userData.fullname + " | " + t("comingsoon.title"),
    pageDescription = userData.homeDescription,
    pageKeywords = userData.homeKeywords,
    fullname = userData.fullname,
    footerQuote = userData.signature,
    socials = userData.socials,
    comingSoonImageSrc = "https://www.azulweb.net/wp-content/uploads/2016/10/Golden-Boy.gif",
} = Astro.props;
---

<BaseLayout
    pageTitle={pageTitle}
    pageDescription={pageDescription}
    pageKeywords={pageKeywords}
    fullname={fullname}
    footerQuote={footerQuote}
    socials={socials}
>
    <main class="coming-soon-page">
        <div class="container coming-soon-content">
            <div class="coming-soon-column coming-soon-image-wrapper">
                <img
                    src={comingSoonImageSrc}
                    alt={t("comingsoon.image.alt")}
                    class="coming-soon-image"
                    draggable="false"
                />
            </div>
            <div class="coming-soon-column coming-soon-text-wrapper">
                <h2 class="coming-soon-title">
                    {t("comingsoon.section.title")}
                </h2>
                <p class="coming-soon-description">
                    {t("comingsoon.description")}
                </p>
                <a href={getRelativeLocaleUrl(currentLocale, "/")} class="btn"
                    >{t("comingsoon.button.text")}</a
                >
            </div>
        </div>
    </main>
</BaseLayout>

<script>
    if (typeof window !== "undefined") {
        window.addEventListener("DOMContentLoaded", () => {
            const button = document.querySelector(".btn");
            if (button) {
                setTimeout(() => {
                    button.click();
                }, 5000);
            }
        });
    }
</script>

<style>
    .coming-soon-page {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 46px - 46px);
        padding: 2rem 0;
    }

    .coming-soon-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        text-align: center;
        width: 100%;
    }

    .coming-soon-column {
        flex: 1;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .coming-soon-image {
        max-width: 100%;
        height: auto;
        border-radius: 1rem;
        box-shadow: var(--shadow-subtle);
        aspect-ratio: 4/3;
        filter: contrast(1.2) brightness(1.4) grayscale(100%);
        user-select: none;
    }

    .coming-soon-title {
        font-family: var(--font-primary);
        font-size: 2rem;
        color: var(--color-primary-light);
        margin-bottom: 1rem;
        animation: glow-text 4s ease-in-out infinite;
        white-space: nowrap;
    }

    .coming-soon-description {
        font-size: 1.1rem;
        color: var(--color-light);
        max-width: 500px;
        margin-bottom: 2rem;
    }

    @media (min-width: 768px) {
        .coming-soon-page {
            min-height: calc(100vh - 70px);
        }

        .coming-soon-content {
            flex-direction: row;
            gap: 3rem;
            text-align: left;
        }

        .coming-soon-text-wrapper {
            align-items: flex-start;
        }
    }

    @media (min-width: 1024px) {
        .coming-soon-content {
            gap: 4rem;
        }

        .coming-soon-title {
            font-size: 3rem;
        }

        .coming-soon-description {
            font-size: 1.2rem;
        }
    }
</style>
